<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cartitiaTouch"
    android:background="#fff">

    <RelativeLayout
        android:background="@drawable/gradientdos"
        android:id="@+id/relLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        >

        <ImageView
            android:id="@+id/imgCard"
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/tikal"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imgCard"
            android:layout_below="@+id/imgCard"
            android:layout_marginStart="5dp"
            android:background="@android:color/transparent"
            android:text="Ruinas Mayas (Tikal)"

            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtNombre"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:text="DescripciÃ³n"
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtDesc"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            android:background="@android:color/transparent"
            android:text="Lugar"
            android:textColor="#ffffff"
            android:textSize="10sp"
            android:textStyle="normal"
            tools:ignore="SmallSp" />

        <ImageView
            android:id="@+id/imgFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imgCard"
            android:layout_below="@+id/txtDesc"
            app:srcCompat="@drawable/ic_action_fav" />
        <ImageView
            android:id="@+id/imgFavPress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/imgCard"
            android:layout_below="@+id/txtDesc"
            app:srcCompat="@drawable/ic_action_fav_press" />

    </RelativeLayout>

</android.support.v7.widget.CardView>